{
  "builds": [
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/server.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task/backend"
  },
  "buildCommand": "cd backend && pip install -r requirements.txt",
  "outputDirectory": "backend"
}

