# تنظیمات محیطی نطق مصطلح

# محیط اجرا
NODE_ENV=development

# پورت سرور
PORT=3001

# دیتابیس
DATABASE_PATH=./data/natiq.db

# لاگ‌گیری
LOG_LEVEL=info

# امنیت
JWT_SECRET=your-super-secret-key-change-in-production

# CORS (در محیط توسعه)
CORS_ORIGIN=*

# محدودیت درخواست
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# تنظیمات بهینه‌سازی
CACHE_TTL=300
CACHE_MAX_KEYS=1000
