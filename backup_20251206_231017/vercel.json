{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "ENABLE_API": "true",
    "MODEL_CACHE_DIR": "/tmp/natiq-models"
  },
  "regions": ["fra1"],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9",
      "NLTK_DATA": "/tmp/nltk_data",
      "TRANSFORMERS_CACHE": "/tmp/transformers_cache"
    }
  }
}

